<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">



    <style name="MainTextViewStyle">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">?attr/titleTextColor</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MainTextViewStyle.Header1">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">?attr/titleTextColor</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="MainTextViewStyle.Header2">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">?attr/titleTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="MainTextViewStyle.WeekTitle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/titleTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainTextViewStyle.WeekNumber">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/titleTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">3dp</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="MainTextViewStyle.HeaderText">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="paddingStart">10dp</item>
    </style>

    <style name="MainTextViewStyle.DayNowWeekNumber">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/subtitleTextColor</item>
    </style>

    <style name="Widget.Material3.BottomNavigationView.MyTheme">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorOnPrimary">@color/gray</item>
    </style>

    <style name="MyCard" parent="Widget.Material3.CardView.Outlined">
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>

    <style name="MyCardWithBG" parent="Widget.Material3.CardView.Elevated">
        <item name="android:colorBackground">?attr/colorSecondaryContainer</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>

    <style name="ThemeChangeAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>







</resources>